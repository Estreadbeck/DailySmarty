<%= form_tag create_post_path, method: 'post' do %>

  <%= text_field_tag :title %>
  <%= text_field_tag :content %>
  <%= collection_select(:post, 
                        :topic_id, 
                        Topic.all, 
                        :id, 
                        :title,
                        { selected: (params[:topic_id] if params[:topic_id])}) 
  %>

  <%= submit_tag 'Save' %>

<% end %>
